<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ReservasSalasController"
      alignment="CENTER"
      spacing="20.0"
      prefWidth="800.0"
      prefHeight="600.0"
      stylesheets="@Style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="ðŸ“† Historial de Reservas de Salas" styleClass="header-label"/>

    <!-- Tabla para mostrar historial de reservas -->
    <TableView fx:id="tablaHistorialReservas" prefHeight="400.0" prefWidth="750.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colSala" text="Sala"/>
            <TableColumn fx:id="colUsuario" text="Usuario"/>
            <TableColumn fx:id="colSolicitud" text="Fecha Solicitud"/>
            <TableColumn fx:id="colInicio" text="Inicio"/>
            <TableColumn fx:id="colFin" text="Fin"/>
            <TableColumn fx:id="colEstado" text="Estado"/>
        </columns>
    </TableView>

    <!-- HBox para los filtros de fecha -->
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Desde:"/>
        <DatePicker fx:id="datePickerDesde"/>
        <Label text="Hasta:"/>
        <DatePicker fx:id="datePickerHasta"/>
        <Button text="Filtrar por Fecha" fx:id="btnFiltrar" onAction="#filtrarPorFecha" styleClass="button"/>
        <Button text="Mostrar Todo" fx:id="btnMostrarTodo" onAction="#mostrarTodo" styleClass="button"/>
    </HBox>

    <!-- BotÃ³n Volver al MenÃº -->
    <Button fx:id="btnVolver"
            text="ðŸ”™ Volver al MenÃº"
            onAction="#volverAlMenu"
            styleClass="button button-blue" />
</VBox>
