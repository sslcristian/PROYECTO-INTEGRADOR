<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="10" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterUserController">

    <VBox.margin>
        <Insets bottom="20" left="20" right="20" top="20" />
    </VBox.margin>

    <Label styleClass="header-label" text="Registro de Usuario" />

    <TextField fx:id="txtCedula" promptText="Cédula" styleClass="text-field" />
    <TextField fx:id="txtNombre" promptText="Nombre completo" styleClass="text-field" />
    <TextField fx:id="txtCorreo" promptText="Correo institucional" styleClass="text-field" />
    <TextField fx:id="txtTelefono" promptText="Teléfono" styleClass="text-field" />

    <ComboBox fx:id="tipoUsuarioCombo" promptText="Tipo de usuario" styleClass="text-field" />
    
    <TextField fx:id="txtDepartamento" promptText="Departamento" styleClass="text-field" />
    <PasswordField fx:id="txtContrasena" promptText="Contraseña" styleClass="password-field" />

    <Button onAction="#registrarUsuario" styleClass="button" text="Registrar" />
</VBox>
