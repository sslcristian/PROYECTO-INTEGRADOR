<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600" prefWidth="800" spacing="20" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controller.MantenimientoSalaController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Título -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Mantenimiento de Sala" />

    <!-- Contenedor para los controles de mantenimiento -->
    <VBox spacing="15">
        <!-- Selección de Sala -->
        <ComboBox fx:id="comboSala" prefWidth="300" promptText="Selecciona una Sala" />

        <!-- Fecha de Mantenimiento -->
        <DatePicker fx:id="fechaMantenimiento" prefWidth="300" promptText="Fecha de Mantenimiento" />

        <!-- Detalles del Mantenimiento -->
        <TextArea fx:id="detalleMantenimiento" prefHeight="150" prefWidth="300" promptText="Detalles del Mantenimiento" wrapText="true" />

        <!-- Técnico Responsable -->
        <TextField fx:id="tecnicoResponsable" prefWidth="300" promptText="Técnico Responsable" />
    </VBox>

    <!-- Botones de acciones para agregar, actualizar y borrar -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#guardarMantenimientoSala" prefWidth="300" style="-fx-background-color: #0D47A1; -fx-text-fill: white;" text="➕ Agregar Mantenimiento" />
        <Button onAction="#actualizarMantenimientoSala" prefWidth="300" style="-fx-background-color: #8BC34A; -fx-text-fill: white;" text="✏️ Actualizar Mantenimiento" />
        <Button onAction="#borrarMantenimientoSala" prefWidth="300" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="❌ Borrar Mantenimiento" />
    </HBox>

    <!-- TableView para ver y gestionar mantenimiento de salas -->
    <TableView fx:id="tablaMantenimientoSala" prefHeight="200" prefWidth="700" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdSala" prefWidth="100" text="ID" />
            <TableColumn fx:id="colNombreSala" prefWidth="200" text="Nombre Sala" />
            <TableColumn fx:id="colFechaMantenimiento" prefWidth="200" text="Fecha Mantenimiento" />
            <TableColumn fx:id="colDetalles" prefWidth="200" text="Detalles" />
            <TableColumn fx:id="colTecnicoResponsable" prefWidth="200" text="Técnico Responsable" />
        </columns>
    </TableView>

    <!-- Botón Volver al Menú -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#volverAlMenu" prefWidth="300" style="-fx-background-color: #FF7043; -fx-text-fill: white;" text="🔙 Volver al Menú" />
    </HBox>
</VBox>
