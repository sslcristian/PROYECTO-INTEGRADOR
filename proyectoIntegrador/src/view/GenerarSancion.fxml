<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SancionController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Título de la interfaz -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Gestionar Sanciones">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#90CAF9" radius="3" />
        </effect>
    </Label>
    <TextField fx:id="cedulaUsuarioField" prefWidth="300" promptText="Cédula del Usuario" style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;" />
    <TextField fx:id="montoField" prefWidth="300" promptText="Monto" style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;" />
    <TextField fx:id="motivoField" prefWidth="300" promptText="Motivo" style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;" />
    
    <!-- DatePicker para seleccionar la fecha -->
    <DatePicker fx:id="fechaPicker" prefWidth="300" style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;" />

    <!-- ComboBox para el estado de la sanción -->
    <ComboBox fx:id="estadoComboBox" prefWidth="300" promptText="Estado" style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;" />

    <!-- Tabla para mostrar las sanciones -->
    <TableView fx:id="sancionTable" prefHeight="200" prefWidth="600" style="-fx-background-color: white; -fx-border-color: #BBDEFB;">
        <columns>
            <TableColumn fx:id="cedulaColumn" prefWidth="100" text="Cédula Usuario" />
            <TableColumn fx:id="montoColumn" prefWidth="100" text="Monto" />
            <TableColumn fx:id="motivoColumn" prefWidth="200" text="Motivo" />
            <TableColumn fx:id="fechaColumn" prefWidth="100" text="Fecha" />
            <TableColumn fx:id="estadoColumn" prefWidth="100" text="Estado" />
        </columns>
    </TableView>

    <!-- Botones para acciones -->
    <Button fx:id="btnAdd" onAction="#addSancion" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #42A5F5; -fx-text-fill: white;" text="Agregar Sanción" />
    <Button fx:id="btnUpdate" onAction="#updateSancion" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #42A5F5; -fx-text-fill: white;" text="Actualizar Sanción" />
    <Button fx:id="btnDelete" onAction="#deleteSancion" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #42A5F5; -fx-text-fill: white;" text="Eliminar Sanción" />
    <Button fx:id="btnFetch" onAction="#fetchSanciones" prefWidth="300" style="-fx-background-color: #42A5F5; -fx-font-size: 16; -fx-text-fill: white;" text="Mostrar Todas las Sanciones" />

    <Button fx:id="btnBack" onAction="#goBackToMenu" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #1976D2; -fx-text-fill: white;" text="Volver al Menú" />
</VBox>
