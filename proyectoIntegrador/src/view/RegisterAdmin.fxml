<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterAdminController">

    <padding>
        <Insets bottom="30" left="50" right="50" top="30" />
    </padding>

    <Label styleClass="header-label" text="REGISTRO DEL ADMINISTRADOR" />

    <TextField fx:id="txtNombre" promptText="Nombre completo" styleClass="text-field" />
    <TextField fx:id="txtCedula" promptText="Cédula" styleClass="text-field" />
    <TextField fx:id="txtCorreo" promptText="Correo electrónico" styleClass="text-field" />
    <TextField fx:id="txtTelefono" promptText="Teléfono" styleClass="text-field" />
    <PasswordField fx:id="txtContrasena" promptText="Contraseña" styleClass="password-field" />
    <TextField fx:id="txtDepartamento" promptText="Departamento" styleClass="text-field" />
    <PasswordField fx:id="txtContrasenaAdmin" promptText="Contraseña del administrativo" styleClass="password-field" />

    <Button onAction="#registrarAdmin" styleClass="button" text="Registrar" />
</VBox>
