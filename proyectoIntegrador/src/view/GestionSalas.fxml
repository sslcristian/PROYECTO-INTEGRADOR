<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.GestionarEquiposController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Gestionar Equipos">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <effect>
            <DropShadow color="#90CAF9" radius="3"/>
        </effect>
    </Label>

    <TextField fx:id="nombreField" prefWidth="300" promptText="Nombre del Equipo"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <TextField fx:id="tipoField" prefWidth="300" promptText="Tipo de Equipo"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <TextField fx:id="estadoField" prefWidth="300" promptText="Estado (Disponible / En Mantenimiento / Prestado)"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <TextField fx:id="ubicacionField" prefWidth="300" promptText="Ubicación"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <TextField fx:id="marcaField" prefWidth="300" promptText="Marca"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <TextField fx:id="modeloField" prefWidth="300" promptText="Modelo"
               style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>
    <DatePicker fx:id="fechaAdquisicionPicker" prefWidth="300"
                style="-fx-background-color: white; -fx-border-color: #BBDEFB; -fx-border-radius: 6;"/>

    <TableView fx:id="equipoTable" prefHeight="200" prefWidth="700" style="-fx-background-color: white; -fx-border-color: #BBDEFB;">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="60" text="ID"/>
            <TableColumn fx:id="nombreColumn" prefWidth="100" text="Nombre"/>
            <TableColumn fx:id="tipoColumn" prefWidth="100" text="Tipo"/>
            <TableColumn fx:id="estadoColumn" prefWidth="100" text="Estado"/>
            <TableColumn fx:id="ubicacionColumn" prefWidth="100" text="Ubicación"/>
            <TableColumn fx:id="marcaColumn" prefWidth="100" text="Marca"/>
            <TableColumn fx:id="modeloColumn" prefWidth="100" text="Modelo"/>
            <TableColumn fx:id="fechaColumn" prefWidth="120" text="Fecha Adquisición"/>
        </columns>
    </TableView>

    <Button fx:id="btnAdd" onAction="#agregarEquipo" prefWidth="300"
            style="-fx-font-size: 16; -fx-background-color: #90CAF9; -fx-text-fill: white;" text="Agregar Equipo"/>
    <Button fx:id="btnUpdate" onAction="#actualizarEquipo" prefWidth="300"
            style="-fx-font-size: 16; -fx-background-color: #64B5F6; -fx-text-fill: white;" text="Actualizar Equipo"/>
    <Button fx:id="btnDelete" onAction="#eliminarEquipo" prefWidth="300"
            style="-fx-font-size: 16; -fx-background-color: #42A5F5; -fx-text-fill: white;" text="Eliminar Equipo"/>
    <Button fx:id="btnFetch" onAction="#cargarEquipos" prefWidth="300"
            style="-fx-font-size: 16; -fx-background-color: #BBDEFB; -fx-text-fill: white;" text="Mostrar Todos los Equipos"/>
    <Button fx:id="btnBack" onAction="#volverAlMenu" prefWidth="300"
            style="-fx-font-size: 16; -fx-background-color: #1976D2; -fx-text-fill: white;" text="Volver al Menú"/>
</VBox>
